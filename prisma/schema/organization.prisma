model Organization {
  id               String   @id @default(uuid())
  name             String
  slug             String   @unique
  email            String   @unique
  phone            String?
  address          String?
  website          String?
  logo             String?
  isActive         Boolean  @default(true)
  maxEmployees     Int      @default(10)
  currentEmployees Int      @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("organizations")
}
